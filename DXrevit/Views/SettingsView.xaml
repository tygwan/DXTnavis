<Window x:Class="DXrevit.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DXrevit 설정"
        Width="500" Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0"
                   Text="DXrevit 설정"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- API 서버 URL -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="API 서버 URL*" FontWeight="Bold"/>
            <TextBox Text="{Binding ApiServerUrl, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,0" Padding="5"/>
            <TextBlock Text="예: http://localhost:8000"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- 기본 사용자명 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="기본 사용자명*" FontWeight="Bold"/>
            <TextBox Text="{Binding DefaultUsername, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,0" Padding="5"/>
        </StackPanel>

        <!-- 타임아웃 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="타임아웃 (초)*" FontWeight="Bold"/>
            <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,0" Padding="5"/>
        </StackPanel>

        <!-- 배치 크기 -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="배치 크기*" FontWeight="Bold"/>
            <TextBox Text="{Binding BatchSize, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,0" Padding="5"/>
        </StackPanel>

        <!-- 버튼 -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="저장"
                    Width="80" Height="30"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"/>
            <Button Content="취소"
                    Width="80" Height="30"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
