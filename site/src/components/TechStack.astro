---
const techItems = [
  { name: 'C#',               category: 'Language',    color: 'from-violet-500 to-violet-400' },
  { name: '.NET Framework 4.8', category: 'Runtime',   color: 'from-blue-500 to-blue-400' },
  { name: 'WPF / XAML',       category: 'UI Framework', color: 'from-sky-500 to-sky-400' },
  { name: 'Navisworks API',   category: '.NET API',    color: 'from-orange-500 to-orange-400' },
  { name: 'ComAPI',           category: 'COM Interop', color: 'from-amber-500 to-amber-400' },
  { name: 'MVVM',             category: 'Pattern',     color: 'from-emerald-500 to-emerald-400' },
  { name: 'Visual Studio',    category: 'IDE',         color: 'from-rose-500 to-rose-400' },
  { name: 'Navisworks 2025',  category: 'Host App',    color: 'from-cyan-500 to-cyan-400' },
];

const versionHistory = [
  { version: 'v0.9.0', date: '2026-01-20', feature: 'Object Grouping MVP' },
  { version: 'v0.8.0', date: '2026-01-19', feature: 'Schedule Builder, Select All' },
  { version: 'v0.6.0', date: '2026-01-11', feature: 'AWP 4D Automation Pipeline' },
  { version: 'v0.5.0', date: '2026-01-09', feature: 'ViewModel Refactoring, CSV Viewer' },
  { version: 'v0.4.0', date: '2026-01-08', feature: 'Object Search, 4-type CSV Export' },
  { version: 'v0.3.0', date: '2026-01-06', feature: 'Tree Expand/Collapse, Level Badges' },
  { version: 'v0.2.0', date: '2026-01-05', feature: '3D Selection, Visibility, Zoom' },
  { version: 'v0.1.0', date: '2026-01-03', feature: 'Level Filter, SysPath Filter, TreeView' },
];

const requirements = [
  { label: 'Visual Studio', value: '2022+' },
  { label: '.NET Framework', value: '4.8' },
  { label: 'Navisworks', value: 'Manage 2025' },
  { label: 'Platform', value: 'x64' },
];
---

<section id="techstack" class="py-24">
  <div class="mx-auto max-w-7xl px-6">

    <h2 class="section-heading">Tech Stack</h2>
    <p class="section-sub">
      기술 스택, 버전 히스토리, 시스템 요구사항
    </p>

    <!-- ========== Tech Stack Badges ========== -->
    <div class="mt-12 flex flex-wrap justify-center gap-3">
      {techItems.map((item) => (
        <div class="group relative overflow-hidden rounded-xl border border-slate-800/80 bg-slate-900/40 px-5 py-3 transition hover:border-slate-700 card-glow">
          <div class={`absolute inset-0 bg-gradient-to-r ${item.color} opacity-0 transition group-hover:opacity-5`}></div>
          <div class="relative">
            <div class="text-sm font-semibold text-white">{item.name}</div>
            <div class="text-xs text-slate-500">{item.category}</div>
          </div>
        </div>
      ))}
    </div>

    <!-- ========== Version History ========== -->
    <div class="mt-12 rounded-2xl border border-slate-800/80 bg-slate-900/40 p-6 sm:p-8">
      <h3 class="text-lg font-semibold text-white mb-6">Version History</h3>
      <div class="space-y-3">
        {versionHistory.map((v, i) => (
          <div class={`flex items-center gap-4 ${i === 0 ? '' : 'opacity-80'}`}>
            <span class={`shrink-0 rounded-lg px-3 py-1 text-xs font-bold font-mono ${i === 0 ? 'bg-blue-500/15 text-blue-400 border border-blue-500/20' : 'bg-slate-800/60 text-slate-400 border border-slate-700/40'}`}>
              {v.version}
            </span>
            <div class="flex-1 flex items-center justify-between gap-2">
              <span class="text-sm text-slate-300">{v.feature}</span>
              <span class="text-xs text-slate-500 font-mono shrink-0">{v.date}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- ========== Requirements ========== -->
    <div class="mt-12 rounded-2xl border border-slate-800/80 bg-slate-900/40 p-6 sm:p-8">
      <h3 class="text-lg font-semibold text-white mb-6">System Requirements</h3>
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
        {requirements.map((r) => (
          <div class="text-center">
            <div class="text-xs text-slate-500 uppercase tracking-wider">{r.label}</div>
            <div class="mt-1 text-sm font-semibold text-white">{r.value}</div>
          </div>
        ))}
      </div>
    </div>

  </div>
</section>
